 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="categoryid" class="text-light">Category id</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="categoryid" value="" placeholder="1">
        </div>
        <div class="form-group">
            <label for="productid" class="text-light">Product id</label>
            <input type="text" name="productid" value="" placeholder="1">
        </div>
        <div class="form-group">
            <label for="categoryName" class="text-light">Category Name</label>
            <input type="text" name="categoryName" value="" placeholder="Example-Electroics">
        </div>
        <div class="form-group">
            <label for="productName" class="text-light">Product Name</label>
            <input type="text" name="productName" value="" placeholder="Oneplus 10R">
        </div>
        

        

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>